<div class="my-login-page">
  <section class="vh-100">
    <div class="container main-container">
      <div class="row justify-content-center h-100">
        <div class="card-wrapper">
          <div class="top-heading-main_div">
            <div class="p-3 top-heading-sub_div">
              <h3 class="top-heading">Hospital Manager</h3>
            </div>
          </div>
          <div class="card fat">
            <div class="card-body">
              <form action="/admin/login" method="post">
                {{#if adminLogErr}}
                <div class="error-div">
                  <div class="error-message">
                    <p class="error-message-heading">{{adminLogErr}}</p>
                  </div>
                </div>
                {{/if}}
                <div class="form-group">
                  <input id="email" type="email" class="form-control" placeholder="Email address" name="email" >
                </div>
                <div class="form-group">
                  <input id="password" type="password" class="form-control" name="password" placeholder="Password" autocomplete="on">
                </div>
                <div class="form-group">
                  <div class="custom-checkbox custom-control p-0">
                    <a class="font-size-12" href="/admin/">Forgot Password?</a>
                  </div>
                  <div class="custom-checkbox custom-control p-0">
                    <a class="font-size-12" href="/">Back to User</a>
                  </div>
                </div>
                <div class="form-group m-0">
                  <button type="submit" class="btn btn-success btn-block font-size-18">Login</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>